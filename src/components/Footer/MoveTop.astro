---
import RoundIconLink from "../RoundIconLink.astro";
---

<RoundIconLink
  link={{
    title: "Up to the top!",
    href: "#top",
    icon: "solar:round-double-alt-arrow-up-bold-duotone",
  }}
/>

<script is:inline>
  document.querySelector("a[href='#top']")?.addEventListener("click", (e) => {
    window.scrollTo({ top: 0, behavior: "smooth" });
    e.preventDefault();
    return false;
  });
</script>
